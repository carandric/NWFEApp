@page
@* @using NWFrontEndApp.Models
@model List<Customer> *@
@model NWFrontEndApp.Pages.CustomersByCountryModel

@{
	ViewData["Title"] = "Customers by Country";
}

<h2>Search Customers by Country</h2>

<form method="get" action="">
	<label for="country">Country: </label>
	<input type="text" id="country" name="country" />
	<button type="submit">Search</button>
</form>

@if (Model != null && /*Model.Count > 0*/ Model.customers != null && Model.customers.Count() > 0)
{
	<table class="table">
		<thead>
			<tr>
				<th>Customer Id</th>
				<th>Company Name</th>
				<th>Contact Name</th>
				<th>Phone Number</th>
				<th>Fax Number</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var customer in Model.customers)
			{
				<tr>
					<td><a href="CustomerOrdersInformation?customerID=@customer.CustomerID">@customer.CustomerID</a></td>
					<td>@customer.CompanyName</td>
					<td>@customer.ContactName</td>
					<td>@customer.Phone</td>
					<td>@customer.Fax</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<p>No customers found for the given country.</p>
}
